{
  "rules": {
    "@proofdict/proofdict": {
      "dictURL": "https://januswel.github.io/proof-dictionary/"
    },
    "preset-japanese": true,
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [
          ":::"
        ]
      },
      "max-kanji-continuous-len": false
    },
    "preset-ja-spacing": {
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
        "/^:::+message .+$/",
        "/^:::details .+$/"
      ]
    }
  }
}
